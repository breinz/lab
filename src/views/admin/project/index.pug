extends ../../layout/admin/layout

block admin_content
    .row
        .col-sm-10
            h1 Projects
        .col-sm-2
            a.btn.btn-success.float-right#test(href="/admin/projects/new") New project
    
    .row
        .col
            table.table.table-striped.table-hover
                //thead
                    tr
                        th Title
                        th(style="width:1%;whitespace:no-wrap") 
                            |Actions
                for project in projects
                    tr
                        td
                            a(href=`/admin/projects/${project.id}`)=project.title
                            if project.technos.length
                                |&emsp;
                            for techno in project.technos
                                |&nbsp;
                                img(src=getImage(techno.image, "tiny"), alt=techno.name title=techno.name)
                        td.actions
                            .btn-group.btn-group-sm
                                a.btn.btn-primary(href=`/admin/projects/${project.id}/edit`)
                                    |&nbsp;
                                    i.fas.fa-edit
                                    |&nbsp;
                                +delete_link(`/admin/projects/${project.id}/delete`)
                else
                    .alert.alert-secondary.text-center No project for now
