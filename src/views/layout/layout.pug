mixin delete_link(href)
    button.btn.btn-danger#delete_link(data-toggle="modal" data-target="#delete_modal" data-href=href)
        |&nbsp;
        i.fas.fa-trash
        |&nbsp;
    
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        
        link(rel='stylesheet', href='/css/main.css')

    body
        include header
        include _flash
        
        block content


    .modal#delete_modal(tabindex="-1" aria-hidden="true" role="dialog")
        .modal-dialog
            .modal-content
                form#delete_modal_form(action="", method="post")
                    .modal-header
                        h5.modal-title Delete
                        button.close(data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    .modal-body
                        |Confirm this action
                    .modal-footer
                        button.btn.btn-secondary(data-dismiss="modal") Cancel
                        input.btn.btn-danger(type="submit", value="Delete")
    
    script(src="/js/main.js")